# ðŸš€ Production-Ready Multi-Stage Dockerfile for Codex Dominion
# Optimized for IONOS hosting and CodexDominion.app domain

# ============================================
# Stage 1: Dependencies
# ============================================
FROM node:20-alpine AS deps
LABEL maintainer="Codex Dominion Council <support@codex-dominion.com>"
LABEL version="2.0.0"

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    libc6-compat \
    python3 \
    py3-pip \
    build-base \
    postgresql-dev

# Copy package files
COPY package*.json ./
COPY frontend/package*.json ./frontend/

# Install Node.js dependencies
RUN npm ci --only=production --ignore-scripts
RUN cd frontend && npm ci --only=production

# ============================================
# Stage 2: Builder
# ============================================
FROM node:20-alpine AS builder
WORKDIR /app

# Copy dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/frontend/node_modules ./frontend/node_modules

# Copy source code
COPY . .

# Set build environment variables
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# Build Next.js frontend
WORKDIR /app/frontend
RUN npm run build

# ============================================
# Stage 3: Python Backend Builder
# ============================================
FROM python:3.11-alpine AS python-builder
WORKDIR /app

# Install Python build dependencies
RUN apk add --no-cache \
    gcc \
    musl-dev \
    postgresql-dev \
    python3-dev \
    libffi-dev

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir --user -r requirements.txt

# ============================================
# Stage 4: Production Runtime
# ============================================
FROM node:20-alpine AS runner
WORKDIR /app

# Install runtime dependencies only
RUN apk add --no-cache \
    curl \
    python3 \
    py3-pip \
    postgresql-client \
    nginx \
    supervisor

# Copy Python dependencies from builder
COPY --from=python-builder /root/.local /root/.local
ENV PATH=/root/.local/bin:$PATH

# Create non-root user
RUN addgroup --system --gid 1001 codex && \
    adduser --system --uid 1001 codex

# Copy Next.js build output
COPY --from=builder --chown=codex:codex /app/frontend/.next ./frontend/.next
COPY --from=builder --chown=codex:codex /app/frontend/public ./frontend/public
COPY --from=builder --chown=codex:codex /app/frontend/package*.json ./frontend/

# Copy production node_modules
COPY --from=deps --chown=codex:codex /app/frontend/node_modules ./frontend/node_modules

# Copy backend source
COPY --chown=codex:codex src/ ./src/
COPY --chown=codex:codex system_capsules/ ./system_capsules/
COPY --chown=codex:codex codex-integration/ ./codex-integration/

# Copy configuration files
COPY --chown=codex:codex package*.json ./
COPY --chown=codex:codex .env.example ./.env

# Create necessary directories
RUN mkdir -p /app/logs /app/data /app/tmp && \
    chown -R codex:codex /app/logs /app/data /app/tmp

# Set environment variables
ENV NODE_ENV=production
ENV PORT=3000
ENV API_PORT=8000
ENV NEXT_TELEMETRY_DISABLED=1

# Expose ports
EXPOSE 3000 8000 80 443

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:3000/api/health || exit 1

# Switch to non-root user
USER codex

# Start application
CMD ["sh", "-c", "cd frontend && npm start"]
