# GCP Settings
gcp_project_id        = "your-gcp-project-id"
gcp_region            = "us-central1"

# GKE/Kubernetes Cluster Settings
k8s_host                   = "https://your-gke-endpoint"
k8s_client_certificate     = "<base64-encoded-client-cert>"
k8s_client_key             = "<base64-encoded-client-key>"
k8s_cluster_ca_certificate = "<base64-encoded-ca-cert>"

# Azure Settings
azure_subscription_id = "your-azure-subscription-id"
azure_resource_group  = "your-azure-resource-group"
azure_location        = "eastus"

# Azure Front Door Profile
azure_afd_profile_name = "your-azure-afd-profile"

# DNS and Domain Settings
codexdominion_domain = "codexdominion.app"
codexdominion_www_domain = "www.codexdominion.app"

