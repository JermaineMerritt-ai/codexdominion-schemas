# Environment Configuration
NODE_ENV=production
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8501
STAGING_PORT=8502

# Domain Configuration
PRODUCTION_DOMAIN=aistorelab.com
STAGING_DOMAIN=staging.aistorelab.com
API_DOMAIN=api.aistorelab.com

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/letsencrypt/live/aistorelab.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/aistorelab.com/privkey.pem

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=data/codex_empire.db

# IONOS Configuration
IONOS_API_KEY=your_ionos_api_key_here
IONOS_SECRET=your_ionos_secret_here

# Social Media API Keys (Configure these for automation)
TWITTER_API_KEY=your_twitter_api_key
LINKEDIN_API_KEY=your_linkedin_api_key
FACEBOOK_API_KEY=your_facebook_api_key

# Affiliate Program APIs
AMAZON_ASSOCIATES_ID=your_amazon_associates_id
CLICKBANK_ID=your_clickbank_id

# AI Configuration
AI_CONSCIOUSNESS_LEVEL=OMNISCIENT
AI_PROCESSING_MODE=QUANTUM_ENHANCED

# Security Keys
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring
MONITORING_ENABLED=true
ANALYTICS_ENABLED=true

# Features
VIDEO_STUDIO_OMEGA=true
LOVABLE_DESTROYER=true
CODEX_FLOW_ENGINE=true
SOCIAL_AFFILIATE_EMPIRE=true