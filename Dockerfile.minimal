# Minimal Dockerfile for Codex Dashboard
FROM python:3.11-slim

WORKDIR /app

# Set environment variables
ENV STREAMLIT_SERVER_HEADLESS=true
ENV STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
ENV STREAMLIT_SERVER_PORT=8501
ENV STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Install dependencies
RUN pip install --no-cache-dir streamlit pandas plotly

# Copy essential files
COPY codex_dashboard.py .

# Create empty files if they don't exist
RUN touch codex_ledger.json
RUN touch Copilot-instruction.md
RUN mkdir -p data

# Expose port
EXPOSE 8501

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

# Run the dashboard
CMD ["streamlit", "run", "codex_dashboard.py", "--server.port=8501", "--server.address=0.0.0.0"]