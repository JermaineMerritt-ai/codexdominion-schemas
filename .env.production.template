# =============================================================================
# Codex Dominion - Production Environment Variables
# =============================================================================
# COPY THIS FILE TO .env AND UPDATE WITH YOUR VALUES
# =============================================================================

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=production
PYTHON_ENV=production

# =============================================================================
# Frontend Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=https://api.codexdominion.app
NEXT_PUBLIC_SITE_URL=https://codexdominion.app
NEXT_PUBLIC_APP_NAME=Codex Dominion
NEXT_PUBLIC_APP_VERSION=2.0.0
NEXT_PUBLIC_EMPIRE_STATUS=sovereign
NEXT_PUBLIC_SOVEREIGNTY_LEVEL=eternal

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NEXT_PUBLIC_ENABLE_SIGNALS=true
NEXT_PUBLIC_ENABLE_CAPSULES=true

# =============================================================================
# Backend Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8001

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://codex:CHANGE_THIS_PASSWORD@database:5432/codexdominion
DATABASE_PASSWORD=CHANGE_THIS_PASSWORD

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://:codex_redis_2025@redis:6379/0
REDIS_PASSWORD=codex_redis_2025

# =============================================================================
# Security & Authentication
# =============================================================================
SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING
API_KEY=CHANGE_THIS_API_KEY

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=https://codexdominion.app,https://www.codexdominion.app

# =============================================================================
# SSL/TLS Configuration (for nginx)
# =============================================================================
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/fullchain.pem
SSL_CERTIFICATE_KEY_PATH=/etc/nginx/ssl/privkey.pem

