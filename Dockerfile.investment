# Investment App - Production Dockerfile
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy application files
COPY investment_app/ ./investment_app/
COPY init_investment_db.py ./

# Install Python dependencies
RUN pip install --no-cache-dir \
    flask==3.0.0 \
    flask-login==0.6.3 \
    flask-migrate==4.1.0 \
    flask-sqlalchemy==3.1.1 \
    apscheduler==3.10.4 \
    requests==2.31.0 \
    yfinance==0.2.32 \
    openai==1.3.5 \
    python-dotenv==1.0.0 \
    gunicorn==21.2.0

# Create instance directory for database
RUN mkdir -p instance

# Initialize database
RUN python init_investment_db.py || echo "Database initialization attempted"

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:5001/ || exit 1

# Expose port
EXPOSE 5001

# Run with Gunicorn
CMD ["gunicorn", "--bind", "0.0.0.0:5001", "--workers", "2", "--timeout", "120", "--access-logfile", "-", "--error-logfile", "-", "investment_app.app:app"]
