# Simple Dockerfile for Codex Dashboard Cloud Deployment
FROM python:3.11-slim

WORKDIR /app

# Set environment variables
ENV STREAMLIT_SERVER_HEADLESS=true
ENV STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
ENV STREAMLIT_SERVER_PORT=8501
ENV STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Install system dependencies
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir streamlit pandas plotly datetime uuid

# Copy application files
COPY codex_dashboard.py .
COPY codex_ledger.json ./codex_ledger.json
COPY Copilot-instruction.md ./Copilot-instruction.md

# Create data directory
RUN mkdir -p data

# Copy JSON files
COPY *.json ./

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

# Expose port
EXPOSE 8501

# Run the dashboard
CMD ["streamlit", "run", "codex_dashboard.py", "--server.port=8501", "--server.address=0.0.0.0"]