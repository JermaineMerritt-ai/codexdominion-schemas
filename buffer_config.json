{
  "buffer_api": {
    "base_url": "https://api.bufferapp.com/1",
    "access_token": "your_buffer_access_token_here",
    "client_id": "your_buffer_client_id_here",
    "client_secret": "your_buffer_client_secret_here"
  },
  "social_accounts": {
    "facebook": {
      "profile_id": "your_facebook_profile_id",
      "enabled": true
    },
    "twitter": {
      "profile_id": "your_twitter_profile_id",
      "enabled": true
    },
    "linkedin": {
      "profile_id": "your_linkedin_profile_id",
      "enabled": true
    },
    "instagram": {
      "profile_id": "your_instagram_profile_id",
      "enabled": true
    }
  },
  "content_settings": {
    "auto_shorten_links": true,
    "include_hashtags": true,
    "default_hashtags": ["#CodexDominion", "#CreatorEconomy", "#DigitalEmpire"]
  },
  "analytics_tracking": {
    "track_engagement": true,
    "track_clicks": true,
    "track_reach": true,
    "report_frequency": "daily"
  }
}
