# Codex Dominion - 3-Cloud Production Environment

# ============================================
# AZURE - Backend API Configuration
# ============================================
AZURE_SUBSCRIPTION_ID=your_subscription_id_here
AZURE_RESOURCE_GROUP=codex-dominion-rg
AZURE_LOCATION=eastus2
AZURE_CONTAINER_APP=codex-backend
AZURE_ACR_NAME=codexdominionacr
AZURE_BACKEND_URL=https://codex-backend.azurecontainerapps.io

# ============================================
# IONOS - Frontend Dashboard Configuration
# ============================================
IONOS_SERVER=your_ionos_ip_here
IONOS_USER=root
IONOS_SSH_KEY=~/.ssh/id_rsa
IONOS_FRONTEND_URL=http://your_ionos_ip:3000

# ============================================
# GOOGLE CLOUD - Creative Engine Configuration
# ============================================
GCP_PROJECT_ID=your_project_id_here
GCP_REGION=us-central1
GCP_SERVICE=codex-creative-engine
GCP_SERVICE_URL=https://codex-creative-engine-xxx.run.app

# ============================================
# Application Configuration
# ============================================
FLASK_ENV=production
NODE_ENV=production
DATABASE_URL=sqlite:///./codex.db
SECRET_KEY=your_secret_key_here

# ============================================
# API Configuration
# ============================================
NEXT_PUBLIC_API_BASE_URL=${AZURE_BACKEND_URL}
NEXT_PUBLIC_CREATIVE_ENGINE_URL=${GCP_SERVICE_URL}

# ============================================
# Monitoring & Logging
# ============================================
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_TRACING=true
