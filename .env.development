# =============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================
# Local development settings - DO NOT commit sensitive data

# Environment
ENVIRONMENT=development
DEBUG=true

# Database (local PostgreSQL)
DATABASE_URL=postgresql+psycopg2://postgres:Jer47@localhost:5432/codexdominion_dev
DATABASE_ECHO=true
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis (local)
REDIS_URL=redis://localhost:6379/0

# Authentication
JWT_SECRET=dev_secret_change_in_production_12345
JWT_EXPIRATION_HOURS=24

# Flask
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=dev_flask_secret_key_12345

# API
API_BASE_URL=http://localhost:5000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed

# RQ Worker
RQ_WORKER_COUNT=1
RQ_WORKER_TIMEOUT=300

# Monitoring (disabled in dev)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_ENABLED=false

# Email (use Mailtrap for testing)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_pass
SMTP_FROM=dev@codexdominion.local

# External Services (dev/test keys)
OPENAI_API_KEY=sk-dev-key-here
STRIPE_API_KEY=sk_test_dev_key_here

# Azure (dev subscription)
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
