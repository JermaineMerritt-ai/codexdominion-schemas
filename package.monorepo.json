{
  "name": "@codex-dominion/monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "Codex Dominion Monorepo - Council Seal Architecture",
  "workspaces": [
    "apps/*",
    "packages/*",
    "agents/*",
    "core",
    "customers",
    "system_capsules/*",
    "avatars/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:chatbot": "cd apps/chatbot && npm run dev",
    "dev:commerce": "cd apps/commerce && npm run dev",
    "dev:observatory": "cd apps/observatory && npm run dev",
    "dev:compliance": "cd apps/compliance && npm run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "council:status": "ts-node -e \"import { councilSeal } from './core/councilSeal'; console.log(councilSeal.getSystemStatus());\"",
    "sovereign:list": "ts-node -e \"import { sovereignService } from './core/sovereigns'; console.log(sovereignService.getAllSovereigns());\"",
    "sovereign:deploy": "turbo run deploy --filter='./apps/*'",
    "custodian:check": "turbo run check --filter='./packages/*'",
    "custodian:health": "ts-node -e \"import { custodianService } from './core/custodians'; console.log(custodianService.getSystemHealth());\"",
    "agents:healthcare": "ts-node agents/healthcare/index.ts",
    "agents:legal": "ts-node agents/legal/index.ts",
    "agents:commerce": "ts-node agents/commerce/index.ts",
    "agents:cybersecurity": "ts-node agents/cybersecurity/index.ts",
    "customers:stats": "ts-node -e \"import { customerPortal } from './customers/customerPortal'; console.log(customerPortal.getPortalStats());\"",
    "flows:metrics": "ts-node -e \"import { flowOrchestrator } from './core/flows'; console.log(flowOrchestrator.getFlowMetrics());\""
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^8.57.1",
    "prettier": "^3.7.3",
    "turbo": "^2.3.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.2.0"
}
