{
  "name": "@codex-dominion/monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "Codex Dominion Monorepo - Council Seal Architecture",
  "workspaces": [
    "apps/*",
    "packages/*",
    "system_capsules/*",
    "avatars/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "council:status": "node scripts/council-status.js",
    "sovereign:deploy": "turbo run deploy --filter='./apps/*'",
    "custodian:check": "turbo run check --filter='./packages/*'",
    "agents:execute": "node scripts/execute-agents.js"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^8.57.1",
    "prettier": "^3.7.3",
    "turbo": "^2.3.3",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.2.0"
}
