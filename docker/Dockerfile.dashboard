# Codex Dominion - Main Dashboard Dockerfile
# Flask/Waitress production server with 17 tabs

FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Install additional production dependencies
RUN pip install --no-cache-dir \
    waitress==3.0.0 \
    gunicorn==21.2.0

# Copy application files
COPY dashboard_working.py app.py
COPY codex_ledger.json .
COPY proclamations.json .
COPY cycles.json .
COPY accounts.json .

# Create static directory
RUN mkdir -p static templates

# Expose port
EXPOSE 5555

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:5555/ || exit 1

# Run with Waitress
CMD ["python", "-c", "from waitress import serve; from app import app; serve(app, host='0.0.0.0', port=5555, threads=8)"]
