# =============================================================================
# STAGING ENVIRONMENT CONFIGURATION
# =============================================================================
# Staging environment - mirror of production for testing

# Environment
ENVIRONMENT=staging
DEBUG=false

# Database (staging PostgreSQL)
DATABASE_URL=postgresql+psycopg2://codexadmin:CHANGE_THIS@staging-db.postgres.database.azure.com:5432/codexdominion_staging
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (staging)
REDIS_URL=redis://staging-redis:6379/0

# Authentication
JWT_SECRET=CHANGE_THIS_STAGING_SECRET_67890
JWT_EXPIRATION_HOURS=24

# Flask
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=CHANGE_THIS_STAGING_FLASK_SECRET

# API
API_BASE_URL=https://staging-api.codexdominion.app
CORS_ORIGINS=https://staging.codexdominion.app

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# RQ Worker
RQ_WORKER_COUNT=2
RQ_WORKER_TIMEOUT=600

# Monitoring
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID
SENTRY_ENVIRONMENT=staging
SENTRY_ENABLED=true
SENTRY_TRACES_SAMPLE_RATE=0.5

# Email (SendGrid staging)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=CHANGE_THIS_SENDGRID_KEY
SMTP_FROM=staging@codexdominion.app

# External Services (test keys)
OPENAI_API_KEY=sk-staging-key-here
STRIPE_API_KEY=sk_test_staging_key_here

# Azure (staging subscription)
AZURE_SUBSCRIPTION_ID=CHANGE_THIS
AZURE_TENANT_ID=CHANGE_THIS
AZURE_CLIENT_ID=CHANGE_THIS
AZURE_CLIENT_SECRET=CHANGE_THIS

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/staging.crt
SSL_KEY_PATH=/etc/ssl/private/staging.key
