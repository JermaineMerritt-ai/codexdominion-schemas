{
  "name": "mcp-chat-auto-startup",
  "displayName": "MCP Chat Auto-Startup",
  "description": "Automatically starts MCP servers when sending chat messages",
  "version": "1.0.0",
  "publisher": "codex-dominion",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": ["Other", "Machine Learning", "Extension Packs"],
  "keywords": [
    "mcp",
    "model context protocol",
    "chat",
    "ai",
    "copilot",
    "auto-startup",
    "codex-dominion"
  ],
  "activationEvents": ["onStartupFinished", "onCommand:mcpChatIntegration.showStatus"],
  "main": "./mcp-vscode-integration.js",
  "contributes": {
    "commands": [
      {
        "command": "mcpChatIntegration.showStatus",
        "title": "Show MCP Status",
        "category": "MCP"
      },
      {
        "command": "mcpChatIntegration.startServer",
        "title": "Start MCP Server",
        "category": "MCP"
      },
      {
        "command": "mcpChatIntegration.stopServer",
        "title": "Stop MCP Server",
        "category": "MCP"
      },
      {
        "command": "mcpChatIntegration.toggleAuto",
        "title": "Toggle Auto-Startup",
        "category": "MCP"
      }
    ],
    "configuration": {
      "title": "MCP Chat Auto-Startup",
      "properties": {
        "mcpAutoStartup.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic MCP server startup when chat activity is detected"
        },
        "mcpAutoStartup.serverPort": {
          "type": "number",
          "default": 4953,
          "description": "Port number for MCP server"
        },
        "mcpAutoStartup.webhookPort": {
          "type": "number",
          "default": 4954,
          "description": "Port number for chat activity webhook"
        },
        "mcpAutoStartup.autoShutdownDelay": {
          "type": "number",
          "default": 300000,
          "description": "Delay in milliseconds before auto-shutdown due to inactivity (default: 5 minutes)"
        },
        "mcpAutoStartup.healthCheckInterval": {
          "type": "number",
          "default": 15000,
          "description": "Health check interval in milliseconds (default: 15 seconds)"
        },
        "mcpAutoStartup.chatDetectionKeywords": {
          "type": "array",
          "default": [
            "chat",
            "conversation",
            "copilot",
            "assistant",
            "ai",
            "gpt",
            "claude",
            "message"
          ],
          "description": "Keywords that indicate chat-related activity"
        },
        "mcpAutoStartup.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show MCP status in the status bar"
        },
        "mcpAutoStartup.logLevel": {
          "type": "string",
          "enum": ["error", "warn", "info", "debug"],
          "default": "info",
          "description": "Logging level for MCP auto-startup system"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "mcpChatIntegration.showStatus",
          "when": "true"
        },
        {
          "command": "mcpChatIntegration.startServer",
          "when": "true"
        },
        {
          "command": "mcpChatIntegration.stopServer",
          "when": "true"
        },
        {
          "command": "mcpChatIntegration.toggleAuto",
          "when": "true"
        }
      ],
      "statusBar": [
        {
          "command": "mcpChatIntegration.showStatus",
          "when": "mcpAutoStartup.showStatusBar"
        }
      ]
    }
  },
  "scripts": {
    "test": "node ./test/runTest.js",
    "lint": "eslint .",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "express": "^4.18.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/node": "^18.0.0",
    "eslint": "^8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codex-dominion/mcp-chat-auto-startup"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  }
}
