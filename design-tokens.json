{
  "$schema": "https://tr.designtokens.org/format/dtcg-schema.json",
  "codex-dominion": {
    "color": {
      "primary": {
        "blue": {
          "$type": "color",
          "$value": "#003049",
          "$description": "Deep Caribbean Blue - Backgrounds, headings"
        },
        "gold": {
          "$type": "color",
          "$value": "#F2C94C",
          "$description": "Gold Accent - CTAs, highlights"
        },
        "coral": {
          "$type": "color",
          "$value": "#FF6B6B",
          "$description": "Coral - Alerts, emphasis, youth energy"
        },
        "teal": {
          "$type": "color",
          "$value": "#00A896",
          "$description": "Teal/Aqua - Supporting accents, AI/tech"
        }
      },
      "neutral": {
        "white": {
          "$type": "color",
          "$value": "#FFFFFF"
        },
        "gray": {
          "light": {
            "$type": "color",
            "$value": "#E0E0E0"
          },
          "medium": {
            "$type": "color",
            "$value": "#BDBDBD"
          },
          "dark": {
            "$type": "color",
            "$value": "#4F4F4F"
          }
        }
      },
      "semantic": {
        "success": {
          "$type": "color",
          "$value": "#00A896",
          "$description": "Success states"
        },
        "warning": {
          "$type": "color",
          "$value": "#F2C94C",
          "$description": "Warning states"
        },
        "error": {
          "$type": "color",
          "$value": "#FF6B6B",
          "$description": "Error states"
        },
        "info": {
          "$type": "color",
          "$value": "#003049",
          "$description": "Info states"
        }
      }
    },
    "font": {
      "family": {
        "primary": {
          "$type": "fontFamily",
          "$value": ["Inter", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "sans-serif"]
        }
      },
      "size": {
        "display": {
          "$type": "dimension",
          "$value": "48px"
        },
        "h1": {
          "$type": "dimension",
          "$value": "32px"
        },
        "h2": {
          "$type": "dimension",
          "$value": "24px"
        },
        "h3": {
          "$type": "dimension",
          "$value": "20px"
        },
        "body": {
          "$type": "dimension",
          "$value": "16px"
        },
        "caption": {
          "$type": "dimension",
          "$value": "14px"
        },
        "overline": {
          "$type": "dimension",
          "$value": "12px"
        }
      },
      "weight": {
        "bold": {
          "$type": "fontWeight",
          "$value": 700
        },
        "semibold": {
          "$type": "fontWeight",
          "$value": 600
        },
        "medium": {
          "$type": "fontWeight",
          "$value": 500
        },
        "regular": {
          "$type": "fontWeight",
          "$value": 400
        }
      }
    },
    "space": {
      "1": {
        "$type": "dimension",
        "$value": "4px",
        "$description": "Tight spacing"
      },
      "2": {
        "$type": "dimension",
        "$value": "8px",
        "$description": "Small gaps"
      },
      "3": {
        "$type": "dimension",
        "$value": "12px",
        "$description": "Default gap"
      },
      "4": {
        "$type": "dimension",
        "$value": "16px",
        "$description": "Base unit"
      },
      "5": {
        "$type": "dimension",
        "$value": "24px",
        "$description": "Section spacing"
      },
      "6": {
        "$type": "dimension",
        "$value": "32px",
        "$description": "Large gaps"
      },
      "7": {
        "$type": "dimension",
        "$value": "40px",
        "$description": "XL gaps"
      },
      "8": {
        "$type": "dimension",
        "$value": "48px",
        "$description": "XXL gaps"
      },
      "9": {
        "$type": "dimension",
        "$value": "64px",
        "$description": "Section breaks"
      }
    },
    "radius": {
      "sm": {
        "$type": "dimension",
        "$value": "4px",
        "$description": "Small corners"
      },
      "md": {
        "$type": "dimension",
        "$value": "8px",
        "$description": "Medium corners (buttons, inputs)"
      },
      "lg": {
        "$type": "dimension",
        "$value": "12px",
        "$description": "Large corners (cards)"
      },
      "xl": {
        "$type": "dimension",
        "$value": "20px",
        "$description": "Extra large corners"
      }
    },
    "shadow": {
      "sm": {
        "$type": "shadow",
        "$value": {
          "color": "rgba(0, 0, 0, 0.08)",
          "offsetX": "0px",
          "offsetY": "2px",
          "blur": "8px",
          "spread": "0px"
        }
      },
      "md": {
        "$type": "shadow",
        "$value": {
          "color": "rgba(0, 0, 0, 0.10)",
          "offsetX": "0px",
          "offsetY": "4px",
          "blur": "16px",
          "spread": "0px"
        }
      },
      "lg": {
        "$type": "shadow",
        "$value": {
          "color": "rgba(0, 0, 0, 0.12)",
          "offsetX": "0px",
          "offsetY": "8px",
          "blur": "24px",
          "spread": "0px"
        }
      }
    },
    "motion": {
      "duration": {
        "fast": {
          "$type": "duration",
          "$value": "150ms"
        },
        "medium": {
          "$type": "duration",
          "$value": "200ms"
        },
        "slow": {
          "$type": "duration",
          "$value": "300ms"
        }
      },
      "easing": {
        "enter": {
          "$type": "cubicBezier",
          "$value": [0.16, 1, 0.3, 1],
          "$description": "ease-out for entering elements"
        },
        "exit": {
          "$type": "cubicBezier",
          "$value": [0.7, 0, 0.84, 0],
          "$description": "ease-in for exiting elements"
        }
      }
    }
  }
}
